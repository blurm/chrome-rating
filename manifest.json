{
    "manifest_version": 2,

    "name": "Movies and Books Rating",
    "description": "This extension shows IMDb and douban rating infos",
    "version": "1.0",

    "icons": {
        "16": "icon3.png",
        "48": "icon3.png",
        "128": "icon3.png"
    },
    "web_accessible_resources": [
        "css/images/*.png"
    ],
    "browser_action": {
        "default_icon": "icon3.png",
        "default_popup": "popup.html",
        "default_title": "Rating info for Books & Movies"
    },
    "permissions": [
        "activeTab",
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://film.qq.com/*",
                "http://v.qq.com/*",
                "https://film.qq.com/*",
                "https://v.qq.com/*",

                "http://ttmeiju.com/*/Movie*",

                "http://item.jd.com/*",
                "http://re.jd.com/cps/item/*",
                "http://e.jd.com/*",
                "http://book.jd.com/*",
                "http://list.jd.com/*",
                "http://search.e.jd.com/*",
                "http://search.jd.com/*",
                "http://sale.jd.com/*",
                "https://item.jd.com/*",
                "https://re.jd.com/cps/item/*",
                "https://e.jd.com/*",
                "https://book.jd.com/*",
                "https://list.jd.com/*",
                "https://search.e.jd.com/*",
                "https://search.jd.com/*",
                "https://sale.jd.com/*"
            ],
            "css": [
                "css/star.css",
                "css/loaders.css"
            ],
            "js": [
                "js/lib/jquery-3.2.1.min.js",
                "js/model/base_info.js",
                "js/model/douban_info.js",
                "js/model/imdb_info.js",
                "js/view/template.js",
                "js/base/common.js",
                "js/controller/util.js"
            ]
        },
        {
            "matches": [
                "http://item.jd.com/*",
                "http://re.jd.com/cps/item/*",
                "http://e.jd.com/*",
                "http://book.jd.com/*",
                "http://list.jd.com/*",
                "http://search.e.jd.com/*",
                "http://search.jd.com/*",
                "http://sale.jd.com/*",
                "https://item.jd.com/*",
                "https://re.jd.com/cps/item/*",
                "https://e.jd.com/*",
                "https://book.jd.com/*",
                "https://list.jd.com/*",
                "https://search.e.jd.com/*",
                "https://search.jd.com/*",
                "https://sale.jd.com/*"
            ],
            "css": [
                "css/book.css"
            ],
            "js": [
                "js/controller/jd.js"
            ]
        },
        {
            "matches": [
                "http://film.qq.com/*",
                "http://v.qq.com/*",
                "https://film.qq.com/*",
                "https://v.qq.com/*"
            ],
            "css": [
                "css/movie.css"
            ],
            "js": [
                "js/controller/qq.js",
                "js/model/test_data.js"
            ]
        },
        {
            "matches": [
                "http://ttmeiju.com/*/Movie*"
            ],
            "js": [
                "js/controller/ttmeiju.js",
                "js/controller/util.js",
                "js/utils/parse_torrent_name/patterns.js",
                "js/utils/parse_torrent_name/parser.js"
            ]
        },
        {
            "matches": [
                "https://movie.douban.com/*",
                "https://book.douban.com/*"
            ],
            "js": [
                "js/base/common.js",
                "js/view/template.js",
                "js/model/base_info.js"
            ]
        }
    ]
}
